<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap = "http://phonegap.com/ns/1.0" id = "com.phonegap.artikelenbeheersysteem" version = "1.0.0">
 
    <name>Artikelenbeheersysteem</name>
 
    <description>
        Artikelenbeheersysteem VTI Roeselare
    </description>
 
    <author href="http://www.vtiroeselare.be" email="stijn.vandewalle@vtir.be">
        Stijn Vandewalle
